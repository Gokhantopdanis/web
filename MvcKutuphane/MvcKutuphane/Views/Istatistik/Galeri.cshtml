@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>        
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Kütüphanemizden Fotoğraflar</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:400px; height:200px;">
            <div class="carousel-inner" style="width:100%;height:100%">
                <div class="item active">
                    <img src="~/web2/resimler/indir.jpg" alt="Los Angeles" style="width:100%;height:100%">
                </div>
                <div class="item">
                    <img src="~/web2/resimler/indir (1).jpg" alt="Los Angeles" style="width:100%;height:100%">
                </div>
                <div class="item">
                    <img src="~/web2/resimler/indir (2).jpg" alt="Los Angeles" style="width:100%;height:100%">
                </div>

                <div class="item">
                    <img src="~/web2/resimler/indir (3).jpg" alt="Los Angeles" style="width:100%;height:100%">
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <br />
    <div class="container">
        <h2>Bazı Kitaplarımız</h2>
        <div id="myCarousel1" class="carousel slide" data-ride="carousel" style="width:400px; height:200px;">
            <div class="carousel-inner" style="width:100%;height:100%">
                @foreach (var rsm in Model)
                {
                    <div class="item @(rsm == Model.First() ? "active" : "")">
                        <img src="@rsm.KITAPRESIM" style="width:100%; height:100%;">
                    </div>
                }
            </div>

            <a class="left carousel-control" href="#myCarousel1" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel1" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
