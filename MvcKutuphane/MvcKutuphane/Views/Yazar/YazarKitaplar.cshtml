@using  MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Yazarı : @ViewBag.yazarAd</h2>
<br />

<table class="table table-striped">
    <tr>
        <td>ID</td>
        <td>Kitap Adı</td>
        <td>Kategori</td>
        <td>Yayınevi</td>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.AD</td>
        <td>@x.TBLKATEGORI.AD</td>
        <td>@x.YAYINEVI</td>
    </tr>
    }
</table>