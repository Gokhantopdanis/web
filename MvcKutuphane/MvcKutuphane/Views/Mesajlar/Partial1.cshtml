<div class="col-md-3">
    <a href="/Mesajlar/YeniMesaj/" class="btn btn-primary btn-block mb-3">Yeni Mesaj</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Mesajlar/Index/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Kutusu
                        <span class="badge bg-primary float-right">@ViewBag.gelensayi</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Mesajlar/Gonderilen/" class="nav-link">
                        <i class="far fa-envelope"></i> Giden Kutusu
                        <span class="badge bg-success float-right">@ViewBag.gidensayi</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>